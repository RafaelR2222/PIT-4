
<script src="/js/Senha/redefinir.js"></script>
<script src="/js/Senha/enviarToken.js"></script>
  <section class="probootstrap-section">
    <div class="container">
      <div class="row probootstrap-gutter60">
        <div class="col-md-8">
          <h2 class="mt0">Redefinir a minha senha</h2>
          <div id="msgRetorno"></div>
          <form id="formbotao" action="#" method="post" class="probootstrap-form " target="_blank" style='display: block;'>
            <div class="form-group">
              <label for="email">Email de recuperação</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Preencha seu email aqui..." maxlength="30">  
            </div>
            <div class="form-group">
              <input type="button" class="btn btn-primary btn-lg" id="btnEnviar" name="submit" value="Enviar">
            </div>
          </form>
          <h4 class="mt0" id="textoEnvio" style="color: rgb(4, 119, 10); display: none;">O token de verificação foi enviado ao seu email!</h5>
          <form id="formToken" action="#" method="post" class="probootstrap-form " target="_blank" style="display:none">
            <div class="form-group">
              <label for="email">Token de recuperação</label>
              <input type="text" class="form-control" id="tokenRecebido" name="tokenRecebido" placeholder="Insira o token recebido..." maxlength="30">  
            </div>
            <div class="form-group">
              <input type="button" class="btn btn-primary btn-lg" id="btnVerificarToken" name="submit" value="Enviar">
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  
